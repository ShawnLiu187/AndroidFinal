<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/MovieToolbar"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

    </android.support.v7.widget.Toolbar>


        <EditText
                android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                android:hint="Find Movie by Name:"
                android:id="@+id/MovieSearch"
            android:layout_below="@id/MovieToolbar"
        />
        <ImageButton
                android:src="@android:drawable/ic_search_category_default"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/Search"
            android:layout_below="@id/MovieToolbar"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ListLabel"
        android:id="@+id/Label"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
        android:layout_below="@id/MovieSearch"/>
    <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        android:layout_below="@id/Label"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Stat Sheet"
        android:id="@+id/StatS"/>

            android:layout_height="match_parent"/>

</RelativeLayout>